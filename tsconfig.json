{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
