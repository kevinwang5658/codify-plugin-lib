{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "**/vitest.config.ts"
  ]
}
